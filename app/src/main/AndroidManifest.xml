<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fst.skytop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/fst_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/fst_app_logo"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">

        <activity
            android:name="com.fst.activities.SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fst.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.fst.activities.SignUpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.fst.activities.ChoiceActivity"
            android:theme="@style/Theme.UserDialog" />

        <activity
            android:name="com.fst.activities.EditBidActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.UserDialog" />

        <activity
            android:name="com.fst.activities.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.fst.activities.LandingActivity"
            android:screenOrientation="portrait" />


    </application>

    <meta-data
        android:name="android.webkit.WebView.EnableSafeBrowsing"
        android:value="true" />

</manifest>